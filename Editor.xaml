<Window x:Class="WpfApp2.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Editor" Height="450" Width="800" Activated="Editor_OnActivated">
    <Grid>
        <TextBox Name="Input" AcceptsReturn="True" AcceptsTab="False" TextWrapping="Wrap"
                 SpellCheck.IsEnabled="False" FontFamily="Consolas, monospace" TextChanged="Input_OnTextChanged"
                 KeyDown="Input_OnKeyDown" />
    </Grid>
</Window>