<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Pause" Name="PauseButton" Click="PauseButton_OnClick" />
                <MenuItem Header="_Resume" IsEnabled="False" Name="ResumeButton" Click="ResumeButton_OnClick" />
                <MenuItem Header="Edit" Name="EditButton" Click="EditButton_OnClick" />
            </Menu>
        </DockPanel>
        <Canvas Grid.Row="1" Name="MainCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="100"
                MinHeight="100">
            <Image Name="PlayerImage" Source="player.png" Width="20" Height="20" />
        </Canvas>
    </Grid>
</Window>